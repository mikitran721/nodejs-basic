<div class="card card-body">
    <h3>Chinh sua bai viet</h3>
    <form action="/posts/{{post._id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Tieu de</label>
            <input type="text" name="title" class="form-control" required value="{{post.title}}">
        </div>
        <div class="form-group">
            <label for="text">Noi dung</label>
            <textarea name="text" class="form-control" required>{{post.text}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Chap nhan thay doi</button>
    </form>
</div>